<script type="text/javascript">
	btn = document.getElementById("btn");
	btn.onclick = function(){
		//ここにクリック時のコードを書きます
		var t = document.getElementById( "textarea01" ).value ;
		var r = document.getElementById( "textarea02" ).value ;
		var u = document.getElementById( "textarea03" ).value ;
　　　console.log(t+'\n'+'\n'+r+'\n'+u+'\n'+"#");
　　　console.log(t+'\n'+'\n'+"【"+t+"】"+'\n'+'\n'+r+'\n'+u+'\n');
　　　console.log(t+'\n'+'\n'+r+'\n'+'\n'+"↓"+'\n'+u+'\n');
	}
</script>
