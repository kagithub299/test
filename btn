<script type="text/javascript">
	btn = document.getElementById("btn");
	btn.onclick = function(){
		//ここにクリック時のコードを書きます
		var t = document.getElementById( "textarea01" ).value ;
		var r = document.getElementById( "textarea02" ).value ;
		var u = document.getElementById( "textarea03" ).value ;
		//ログ出力
　　　console.log(t+'\n'+'\n'+r+'\n'+u+'\n'+"#");
　　　console.log(t+'\n'+'\n'+"【"+t+"】"+'\n'+'\n'+r+'\n'+u+'\n');
　　　console.log(t+'\n'+'\n'+r+'\n'+'\n'+"↓"+'\n'+u+'\n');
　　　//ツイッター
　　　var twitter = (t+'\n'+'\n'+r+'\n'+u+'\n'+"#F");
　　　var twitter = twitter.replace(/\n/g,"<BR>");
　　　twittertext.innerHTML=twitter;
　　　//フェイスブック
　　　var fbook = (t+'\n'+'\n'+"【"+t+"】"+'\n'+'\n'+r+'\n'+u+'\n');
　　　var fbook = fbook.replace(/\n/g,"<BR>");
　　　fbooktext.innerHTML=fbook;
　　　//ユーチューブ
　　　var youtube = (t+'\n'+'\n'+r+'\n'+'\n'+"↓記"+'\n'+u+'\n');
　　　var youtube = youtube.replace(/\n/g,"<BR>");
　　　youtubetext.innerHTML=youtube;
	}
</script>
